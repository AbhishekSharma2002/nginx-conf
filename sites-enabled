server {
    listen 443 ssl http2;
    server_name test.wasuat.in www.test.wasuat.in;

    root /usr/share/nginx/html/;
    index index.html;

    ssl_certificate /etc/letsencrypt/live/test.wasuat.in/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/test.wasuat.in/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;

    location / {
        try_files $uri $uri/ =404;
    }
}


